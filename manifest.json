{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "options.html"
}
